{
  "manifest_version": 3,

  "name": "KK Ajax Monitor",
  "description": "Ajax monitor tool",
  "version": "1.0",

  "icons": {
    "128": "icon.png"
  },

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "js/defaultSettings.js",
        "js/main.js",
        "index.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "content.js", "js/main.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}